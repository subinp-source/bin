<action-definition id="integrationbackoffice.actions.createVirtualAttributeAction"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Create Virtual Attribute</name>
    <description>Action to open a window for the fields to define when creating a virtual attribute</description>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.integrationbackoffice.widgets.actions.CreateVirtualAttributeAction</actionClassName>

    <iconUri>/icons/add_virtual_attr_default.png</iconUri>
    <iconHoverUri>/icons/add_virtual_attr_hover.png</iconHoverUri>
    <iconDisabledUri>/icons/add_virtual_attr_disabled.png</iconDisabledUri>

    <sockets>
        <output id="createVirtualAttributePerform" type="java.lang.String"/>
    </sockets>

</action-definition>
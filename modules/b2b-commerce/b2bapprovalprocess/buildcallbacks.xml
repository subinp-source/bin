<!--
 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation
 
	 before/after ant macro "clean"
		 <macrodef name="b2bapprovalprocess_before_clean"/>
		 <macrodef name="b2bapprovalprocess_after_clean"/>
	 
	 before/after ant macro "build"
		 <macrodef name="b2bapprovalprocess_before_build"/>
		 <macrodef name="b2bapprovalprocess_after_build"/>
		 
	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="b2bapprovalprocess_before_compile_core">
		 <macrodef name="b2bapprovalprocess_after_compile_core">
	 
	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="b2bapprovalprocess_before_compile_web" />
		 <macrodef name="b2bapprovalprocess_after_compile_web" />
 
 Preparing extension
 
	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)	
		 <macrodef name="b2bapprovalprocess_only_once_prepare"/>
 
 Creating ear module/production
 
	 before/after ant macro "ear"
		 <macrodef name="b2bapprovalprocess_before_ear"/>
		 <macrodef name="b2bapprovalprocess_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="b2bapprovalprocess_before_production" />
		 <macrodef name="b2bapprovalprocess_after_production" />
 
 JUnit Test
 
	 before/after ant macro "yunitinit" 
		 <macrodef name="b2bapprovalprocess_before_yunitinit" />
		 <macrodef name="b2bapprovalprocess_after_yunitinit" />
	 
	 before/after ant macro "yunit"
		 <macrodef name="b2bapprovalprocess_before_yunit" />
		 <macrodef name="b2bapprovalprocess_after_yunit" /> 
		 
 Distribution package
 
	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="b2bapprovalprocess_after_dist"/>
		 <macrodef name="b2bapprovalprocess_before_dist"/>
	 
	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="b2bapprovalprocess_before_dist_copy"/>
		 <macrodef name="b2bapprovalprocess_after_dist_copy"/>
		  
	 With these filters you can override the default extension filters defined in platform/resources/ant/dist/filtersets.xml
		 <patternset id="extension.b2bapprovalprocess.binary.filter">
			 <patternset refid="extension.filter" />
			 <exclude name="**/*-source.jar" />
		 </patternset>
		 <patternset id="extension.b2bapprovalprocess.source.filter">
			 <exclude name="**/bin/**" />
		 </patternset>
 
-->
<project name="b2bapprovalprocess_buildcallbacks">

	<macrodef name="b2bapprovalprocess_clean_classpath_file">
		<sequential>
			<copy file="${ext.b2bapprovalprocess.path}/.classpath" tofile="${ext.b2bapprovalprocess.path}/.classpath.edit"
				  overwrite="true"
				  failonerror="true">
				<filterchain>
					<linecontainsregexp negate="true">
						<regexp pattern="^(\t\t\t\t|)$" />  <!-- added by script -->
					</linecontainsregexp>
				</filterchain>
			</copy>
			<move file="${ext.b2bapprovalprocess.path}/.classpath.edit" tofile="${ext.b2bapprovalprocess.path}/.classpath"
				  overwrite="true"
				  failonerror="true" />
		</sequential>
	</macrodef>

	<macrodef name="b2bapprovalprocess_after_clean">
		<sequential>
			<echo level="info" message="Generating .classpath file for b2bapprovalprocess" />
			<create_extension_classpath_file extname="b2bapprovalprocess" />
			<b2bapprovalprocess_clean_classpath_file />
		</sequential>
	</macrodef>

</project>

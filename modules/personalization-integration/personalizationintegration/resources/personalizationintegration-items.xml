<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>

		<itemtype generate="true"
		   code="CxMapperScript"
		   jaloclass="de.hybris.platform.personalizationintegration.jalo.CxMapperScript"
		   extends="Script"
		   autocreate="true">
		   <attributes>
		   		<attribute type="java.lang.String" qualifier="group">
		   			<persistence type="property"/>
		   			<modifiers optional="false" />
		   		</attribute>
		   </attributes>
		</itemtype>

		<itemtype code="CxConfig" autocreate="false" generate="false">
			<attributes>
				<attribute qualifier="autoCreateSegments" type="java.lang.Boolean">
					<description>If set to true segments are automatically created from external data during update.</description>
					<defaultvalue>java.lang.Boolean.TRUE</defaultvalue>
					<modifiers read="true" write="true" optional="false"/>
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

	</itemtypes>
</items>

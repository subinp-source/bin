<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="com.hybris.backoffice.widgets.workflowdetailsmanager">
    <name>Workflow Details Manager</name>
    <description>Updates workflow details view state</description>
    <keywords>
        <keyword>Workflow</keyword>
    </keywords>
    <version>1.0</version>

    <sockets>
        <input id="showWorkflow" type="de.hybris.platform.workflow.model.WorkflowModel"/>
        <output id="selectedWorkflowUpdated" type="de.hybris.platform.workflow.model.WorkflowModel"/>
        <output id="selectedWorkflowDeleted" type="de.hybris.platform.workflow.model.WorkflowModel"/>
    </sockets>

    <controller class="com.hybris.backoffice.widgets.workflowdetails.WorkflowDetailsManagerController"/>

    <view src="none" />

</widget-definition>

<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="com.hybris.backoffice.widgets.selectivesync">

    <name>Selective Synchronization Widget</name>
    <description>Selective Synchronization Widget</description>
    <defaultTitle>Selective Synchronization</defaultTitle>
    <author>hybris</author>
    <version>1.0</version>

    <view src="selectivesync.zul"/>
    <controller class="com.hybris.backoffice.widgets.selectivesync.SelectiveSyncController"/>

    <sockets>
        <input id="inputObject" type="de.hybris.platform.catalog.model.synchronization.CatalogVersionSyncJobModel"/>
        <output id="objectSaved" type="de.hybris.platform.catalog.model.synchronization.CatalogVersionSyncJobModel"/>
    </sockets>

    <keywords>
        <keyword>Catalog</keyword>
        <keyword>Synchronization</keyword>
        <keyword>Selective Synchronization</keyword>
    </keywords>

</widget-definition>


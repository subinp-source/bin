<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="com.hybris.backoffice.widgets.actions.addworkflowattachment"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
    <sockets>
        <input id="referenceSearchResult" type="java.lang.Object" multiplicity="List"/>
        <output id="referenceSearchCtx" type="com.hybris.cockpitng.data.TypeAwareSelectionContext"/>
        <output id="updatedWorkflow" type="de.hybris.platform.workflow.model.WorkflowModel"/>
    </sockets>

    <name>Add workflow attachment</name>
    <description>Allows to add attachments to workflow</description>
    <keywords>
        <keyword>Workflow</keyword>
        <keyword>attachment</keyword>
    </keywords>
    <author>hybris</author>
    <version>1.0</version>

    <iconUri>icons/icon_action_add_default.png</iconUri>
    <iconHoverUri>icons/icon_action_add_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_add_disabled.png</iconDisabledUri>
    <actionClassName>com.hybris.backoffice.widgets.actions.workflow.AddWorkflowAttachmentAction</actionClassName>
    <customRendererClassName>com.hybris.backoffice.widgets.actions.workflow.AddWorkflowAttachmentActionRenderer</customRendererClassName>
</action-definition>

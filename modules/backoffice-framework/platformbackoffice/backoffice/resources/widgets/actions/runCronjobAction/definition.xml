<action-definition id="com.hybris.cockpitng.action.runcronjob" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Run CronJob</name>
    <description>Start CronJob on demand</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.platformbackoffice.actions.cronjob.PerformCronJobAction</actionClassName>

    <inputType>java.lang.CronJobModel</inputType>
    <outputType>java.lang.Object</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_perform_cronjob_default.png</iconUri>
    <iconHoverUri>icons/icon_action_perform_cronjob_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_perform_cronjob_disabled.png</iconDisabledUri>

</action-definition>
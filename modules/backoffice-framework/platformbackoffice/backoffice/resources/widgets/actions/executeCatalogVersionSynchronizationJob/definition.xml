<action-definition id="com.hybris.cockpitng.action.executecatalogsynchronizationjob"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Catalog Version Synchronization Job execution</name>
    <description>Catalog Version Synchronization Job execution</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.platformbackoffice.actions.catalogsynchronization.ExecuteCatalogSynchronizationJobAction</actionClassName>

    <inputType>de.hybris.platform.catalog.model.synchronization.CatalogVersionSyncJobModel</inputType>
    <outputType>java.lang.Object</outputType>
    <sockets>
        <output id="startSyncForm" type="de.hybris.platform.platformbackoffice.widgets.catalogsynchronization.StartSyncForm"/>
    </sockets>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/catSync_default.png</iconUri>
    <iconHoverUri>icons/catSync_active.png</iconHoverUri>
    <iconDisabledUri>icons/catSync_disabled.png</iconDisabledUri>

</action-definition>
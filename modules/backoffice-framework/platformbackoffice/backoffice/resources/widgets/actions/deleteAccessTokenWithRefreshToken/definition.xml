<action-definition id="DeleteAccessTokenWithRefreshToken" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>deleteAccessTokenWithRefreshToken</name>
    <description>Removes access token and related refresh token</description>
    <version>1</version>

    <actionClassName>de.hybris.platform.platformbackoffice.actions.oauth2.DeleteAccessTokenWithRefreshTokenAction</actionClassName>

    <inputType>java.lang.OAuthAccessToken</inputType>
    <outputType>java.lang.String</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_delete_default.png</iconUri>
    <iconHoverUri>icons/icon_action_delete_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_delete_default.png</iconDisabledUri>
</action-definition>
